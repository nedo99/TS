<script type="text/javascript">
function showStuff(n) {
	if (document.getElementById(n).style.visibility != 'visible')
	  document.getElementById(n).style.visibility = 'visible';
	else
	  document.getElementById(n).style.visibility = 'hidden';
}
</script>
